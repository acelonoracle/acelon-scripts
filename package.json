{
  "name": "youves-acurast-jobs",
  "version": "1.0.0",
  "description": "Youves Acurast Jobs - Tezos blockchain integration with Acurast",
  "main": "dist/stxtz/index.js",
  "scripts": {
    "build": "bun run build:stxtz",
    "build:stxtz": "NODE_ENV=production bun build scripts/stxtz/index.ts --outdir dist/stxtz --target node --minify --format cjs",
    "start": "bun run start:stxtz",
    "start:stxtz": "bun run dist/stxtz/index.js",
    "dev": "bun run dev:stxtz",
    "dev:stxtz": "bun --watch scripts/stxtz/index.ts",
    "clean": "rm -rf dist",
    "prebuild": "bun run clean",
    "format": "prettier --write scripts/**/*.{ts,tsx,json} *.{json,md}",
    "format:check": "prettier --check scripts/**/*.{ts,tsx,json} *.{json,md}",
    "test": "bun test",
    "test:watch": "bun test --watch"
  },
  "keywords": [
    "tezos",
    "acurast",
    "blockchain",
    "stxtz",
    "taquito"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@acurast-processor/taquito": "^0.0.3",
    "@taquito/taquito": "^22.0.0"
  },
  "devDependencies": {
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
